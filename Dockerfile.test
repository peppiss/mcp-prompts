FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code and test files
COPY tsconfig.json ./
COPY src/ ./src/
COPY tests/ ./tests/

# Create a directory for test results
RUN mkdir -p test-results

# Set environment variables
ENV NODE_ENV=test

# Default command to run tests
CMD ["npm", "test"] 